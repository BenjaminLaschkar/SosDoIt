<resources>
    <style name="TextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TextViewTheme.Description">
        <item name="android:layout_marginTop">@dimen/element_margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextViewTheme.Description.First">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextViewTheme.Element">
        <item name="android:layout_marginTop">@dimen/element_margin_small</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/red</item>

        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_gravity">top|center</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:colorBackground">@color/dark_grey</item>

        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>
</resources>
