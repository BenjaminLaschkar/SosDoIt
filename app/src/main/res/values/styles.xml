<resources>
    <style name="TextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TextViewTheme.Description">
        <item name="android:layout_marginTop">@dimen/element_vertical_margin</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextViewTheme.Description.First">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextViewTheme.Element">
        <item name="android:layout_marginTop">@dimen/element_vertical_margin_small</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/red</item>

        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:colorBackground">@color/dark_grey</item>

        <item name="android:gravity">center</item>

        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>
</resources>
